<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="297.0" prefWidth="414.0" stylesheets="styles/ForgotPasswordStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coinTrack.FXMLDocumentController">
   <children>
      <TextField fx:id="recoveryEmail" layoutX="133.0" layoutY="70.0" promptText="email address" />
      <Text layoutX="137.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your email">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Text>
      <Text fx:id="forgotPasswordWarning" fill="#1e1e1e" layoutX="45.0" layoutY="178.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Please check your email and enter the code">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Text>
      <Button fx:id="recoveryEmailBtn" layoutX="148.0" layoutY="110.0" mnemonicParsing="false" onAction="#handleRecoveryEmail" text="Get Recovery Code" />
      <TextField fx:id="recoveryCode" layoutX="132.0" layoutY="195.0" promptText="code" />
      <Button fx:id="submitRecoveryCodeBtn" layoutX="165.0" layoutY="234.0" mnemonicParsing="false" onAction="#handleRecoveryCode" text="Submit Code" />
      <Text fx:id="recoveryMessage" layoutX="133.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="149.0">
         <font>
            <Font size="14.0" />
         </font>
      </Text>
      <Button fx:id="backBtn" mnemonicParsing="false" onAction="#handleBackToMain" text="Back" />
   </children>
</AnchorPane>
