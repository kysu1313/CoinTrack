<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" stylesheets="styleSheets/ForgotPasswordStyle.css" prefHeight="297.0" prefWidth="414.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coinTrack.FXMLDocumentController">
   <children>
      <TextField fx:id="recoveryEmail" layoutX="133.0" layoutY="111.0" promptText="email address" />
      <Text layoutX="143.0" layoutY="89.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your email">
         <font>
            <Font size="18.0" />
         </font>
      </Text>
      <Text fx:id="forgotPasswordWarning" layoutX="99.0" layoutY="267.0" strokeType="OUTSIDE" strokeWidth="0.0" text="We will send an email with a recovery code" />
      <Button fx:id="recoveryEmailBtn" layoutX="149.0" layoutY="143.0" mnemonicParsing="false" onAction="#handleRecoveryEmail" text="Get Recovery Code" />
      <TextField fx:id="recoveryCode" layoutX="133.0" layoutY="184.0" promptText="code" />
      <Button fx:id="submitRecoveryCodeBtn" layoutX="165.0" layoutY="216.0" mnemonicParsing="false" onAction="#handleRecoveryCode" text="Submit Code" />
      <Text fx:id="recoveryMessage" layoutX="133.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="149.0">
         <font>
            <Font size="14.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
