<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="297.0" prefWidth="414.0" stylesheets="styleSheets/ForgotPasswordStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coinTrack.FXMLDocumentController">
   <children>
      <TextField fx:id="recoveryEmail" layoutX="133.0" layoutY="75.0" promptText="email address" />
      <Text fill="WHITE" layoutX="142.0" layoutY="57.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your email">
         <font>
            <Font size="18.0" />
         </font>
      </Text>
      <Text fx:id="forgotPasswordWarning" fill="WHITE" layoutX="106.0" layoutY="162.0" strokeType="OUTSIDE" strokeWidth="0.0" text="We will send an email with a recovery code" />
      <Button fx:id="recoveryEmailBtn" layoutX="148.0" layoutY="110.0" mnemonicParsing="false" onAction="#handleRecoveryEmail" text="Get Recovery Code" />
      <TextField fx:id="recoveryCode" layoutX="133.0" layoutY="201.0" promptText="code" />
      <Button fx:id="submitRecoveryCodeBtn" layoutX="165.0" layoutY="234.0" mnemonicParsing="false" onAction="#handleRecoveryCode" text="Submit Code" />
      <Text fx:id="recoveryMessage" layoutX="133.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="149.0">
         <font>
            <Font size="14.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
